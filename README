# SETUP

$ sudo yum install -y perl-local-lib
$ perl -Mlocal::lib
結果を.bash_profileへ
$ source .bash_profile
$ cpan -i LWP::UserAgent
$ cpan -i HTML::TreeBuilder
$ cpan -i Text::CSV
$ cpan -i Data::Dumper;


# CSV FORMAT
url,AuthName,user,passwd,href,href,.....

# create .htpasswd
$ sudo passwd -c -b /etc/httpd/conf/.example.com.htpasswd test test


# /etc/httpd/conf.d/example.conf
        <Directory /home/sites/example.com/html/tmp>
                AuthUserFile /etc/httpd/conf/.example.com.htpasswd
                AuthGroupFile /dev/null
                AuthName "Basic Auth"
                AuthType Basic
                Require valid-user
        </Directory>

